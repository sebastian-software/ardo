{
  "name": "ardo",
  "version": "2.0.1",
  "description": "React-first Static Documentation Framework",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./config": {
      "import": "./dist/config/index.js",
      "types": "./dist/config/index.d.ts"
    },
    "./vite": {
      "import": "./dist/vite/index.js",
      "types": "./dist/vite/index.d.ts"
    },
    "./runtime": {
      "types": "./dist/runtime/index.d.ts",
      "import": "./dist/runtime/index.js"
    },
    "./ui": {
      "import": "./dist/ui/index.js",
      "types": "./dist/ui/index.d.ts"
    },
    "./ui/styles.css": "./dist/ui/styles.css",
    "./icons": {
      "import": "./dist/icons/index.js",
      "types": "./dist/icons/index.d.ts"
    },
    "./typedoc": {
      "import": "./dist/typedoc/index.js",
      "types": "./dist/typedoc/index.d.ts"
    },
    "./mdx-provider": {
      "import": "./dist/mdx/provider.js",
      "types": "./dist/mdx/provider.d.ts"
    },
    "./press.css": "./dist/ui/styles.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@mdx-js/rollup": "^3.1.0",
    "@react-router/dev": "^7.1.0",
    "@shikijs/rehype": "^3.22.0",
    "@vitejs/plugin-react": "^5.1.2",
    "gray-matter": "^4.0.3",
    "hast-util-to-jsx-runtime": "^2.3.6",
    "lucide-react": "^0.563.0",
    "mdast-util-directive": "^3.1.0",
    "minisearch": "^7.2.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-router": "^7.1.0",
    "rehype-parse": "^9.0.1",
    "rehype-stringify": "^10.0.1",
    "remark-directive": "^4.0.0",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.1",
    "remark-mdx-frontmatter": "^4.0.0",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "shiki": "^3.21.0",
    "tailwindcss": "^4.1.18",
    "typedoc": "^0.28.16",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.1.0"
  },
  "peerDependencies": {
    "vite": "^6.0.0 || ^7.0.0 || ^8.0.0-beta.0"
  },
  "devDependencies": {
    "@types/hast": "^3.0.4",
    "@types/mdast": "^4.0.4",
    "@types/mdx": "^2.0.13",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vite": "^8.0.0-beta.11"
  },
  "keywords": [
    "documentation",
    "static-site",
    "react",
    "vitepress",
    "markdown",
    "docs"
  ],
  "author": "Sebastian Software GmbH",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sebastian-software/ardo.git",
    "directory": "packages/ardo"
  },
  "homepage": "https://sebastian-software.github.io/ardo/",
  "bugs": {
    "url": "https://github.com/sebastian-software/ardo/issues"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/sebastian-software"
  }
}
