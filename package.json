{
  "name": "ardo-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "React-first Static Documentation Framework",
  "repository": {
    "type": "git",
    "url": "https://github.com/sebastian-software/ardo.git"
  },
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm --filter ardo dev",
    "test": "vitest --run",
    "test:watch": "vitest",
    "lint": "eslint packages/*/src",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "pnpm -r typecheck",
    "docs:dev": "pnpm -r --filter ./docs dev",
    "docs:build": "pnpm -r build",
    "prepare": "husky"
  },
  "keywords": [
    "documentation",
    "static-site",
    "react",
    "vitepress",
    "markdown",
    "docs",
    "tanstack"
  ],
  "author": "Sebastian Software GmbH",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^22.10.0",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^17.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@10.28.1+sha512.7d7dbbca9e99447b7c3bf7a73286afaaf6be99251eb9498baefa7d406892f67b879adb3a1d7e687fc4ccc1a388c7175fbaae567a26ab44d1067b54fcb0d6a316",
  "lint-staged": {
    "*.{ts,tsx,js,json,md,yml,yaml}": "prettier --write"
  }
}
