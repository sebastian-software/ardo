{
  "name": "ardo-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "React-first Static Documentation Framework",
  "repository": {
    "type": "git",
    "url": "https://github.com/sebastian-software/ardo.git"
  },
  "type": "module",
  "scripts": {
    "build": "pnpm -r --filter './packages/*' build",
    "dev": "pnpm --filter ardo dev",
    "test": "vitest --run",
    "test:watch": "vitest",
    "lint": "eslint packages/*/src",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "pnpm -r typecheck",
    "docs:dev": "pnpm -r --filter ./docs dev",
    "docs:build": "pnpm -r --filter './docs' build",
    "prepare": "husky"
  },
  "keywords": [
    "documentation",
    "static-site",
    "react",
    "vitepress",
    "markdown",
    "docs",
    "tanstack"
  ],
  "author": "Sebastian Software GmbH",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/node": "^25.2.2",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "eslint": "^10.0.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@10.29.2+sha512.bef43fa759d91fd2da4b319a5a0d13ef7a45bb985a3d7342058470f9d2051a3ba8674e629672654686ef9443ad13a82da2beb9eeb3e0221c87b8154fff9d74b8",
  "lint-staged": {
    "*.{ts,tsx,js,json,md,mdx,yml,yaml}": "prettier --write"
  }
}
