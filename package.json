{
  "name": "ardo-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "React-first Static Documentation Framework",
  "repository": {
    "type": "git",
    "url": "https://github.com/sebastian-software/ardo.git"
  },
  "type": "module",
  "scripts": {
    "build": "pnpm -r --filter './packages/*' build",
    "dev": "pnpm --filter ardo dev",
    "test": "vitest --run",
    "test:watch": "vitest",
    "lint": "eslint packages/*/src",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "pnpm -r typecheck",
    "docs:dev": "pnpm -r --filter ./docs dev",
    "docs:build": "pnpm -r --filter './docs' build",
    "prepare": "husky"
  },
  "keywords": [
    "documentation",
    "static-site",
    "react",
    "vitepress",
    "markdown",
    "docs",
    "tanstack"
  ],
  "author": "Sebastian Software GmbH",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^22.10.0",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@10.28.2+sha512.41872f037ad22f7348e3b1debbaf7e867cfd448f2726d9cf74c08f19507c31d2c8e7a11525b983febc2df640b5438dee6023ebb1f84ed43cc2d654d2bc326264",
  "lint-staged": {
    "*.{ts,tsx,js,json,md,yml,yaml}": "prettier --write"
  }
}
